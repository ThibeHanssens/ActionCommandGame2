@using Microsoft.AspNetCore.Components.Authorization
@using ActionCommandGame.BlazorApp
@inject NavigationManager NavigationManager

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                @{
                    var signInRoute = AppRoutes.Account.SignIn;
                    var uri = NavigationManager.Uri;
                    var baseUri = NavigationManager.BaseUri;
                    var relativeUrl = uri.Substring(baseUri.Length - 1, uri.Length - baseUri.Length + 1);
                    Console.WriteLine($"Not authorized: Navigating to {signInRoute} with returnUrl={relativeUrl}");
                    NavigationManager.NavigateTo($"{signInRoute}?returnUrl={relativeUrl}");
                }
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not Found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, the requested page does not exist.</p>
        </LayoutView>
    </NotFound>
</Router>
